<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
  integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
  crossorigin="anonymous" referrerpolicy="no-referrer" />
  <title>{{title}}</title>
</head>
<body>

  <nav class="w-full bg-white shadow-md border flex justify-center px-4 py-2">
    <div class="w-1/2 flex justify-between">
      <h1 class="text-xl font-semibold">
        <a href="/">Adonisgram</a>
      </h1>

      @if(auth.isAuthenticated && auth.user.email_verified_at === null)
        <form action="/verify-email" method="post">
          <input type="submit" class="px-2 py-1 rounded bg-gray-400" value="Resend">
        </form>
      @endif

      <div>
        @if(auth.isAuthenticated)
      


        <div class="relative inline-block text-left">
            <button type="button"
              class="inline-flex w-full justify-center cursor-pointer  bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 "
              id="dropdown" aria-expanded="true" aria-haspopup="true">
              <img src="{{auth.user.avatar}}" class="h-8 w-8 rounded-full border " style="object-fit:cover ;" alt="profile"
                srcset="">
            </button>
           
          <div  id="dropdown-items"
            class="absolute hidden right-0 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
            role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="py-1" role="none">
            <a href="/{{auth.user.username}}" class="text-gray-700 block px-4 py-2 text-sm border-b " role="menuitem" tabindex="-1" id="menu-item-0">Profile</a>
              <form method="POST" action="/logout" role="none">
                <button type="submit" class="text-gray-700 block w-full px-4 py-2 text-left text-sm" role="menuitem"
                  tabindex="-1" id="menu-item-3">Sign out</button>
              </form>
            </div>
          </div>
        </div>

        @endif
      </div>
    </div>
  </nav>


    <div class="bg-gray-100 h-screen flex justify-center">
      <div class="w-full md:w-1/2">

    @section('content')   
    @endsection
    </div>

    <script>

      const dropdown = document.getElementById('dropdown')
        const dropdownItems = document.getElementById('dropdown-items')

      dropdown.addEventListener('click',()=>{

        if(dropdownItems.classList.contains('hidden')){
        dropdownItems.classList.remove('hidden')
        }else{
          dropdownItems.classList.add('hidden')

        }
      })
    </script>
      </div>

</body>
</html>
